    <script>
        // --- 1. Background Animation Logic ---
        const canvas = document.getElementById('bgCanvas');
        const ctx = canvas.getContext('2d');
        let particles = [];
        let mouse = { x: null, y: null };

        function initCanvas() {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        }

        class Particle {
            constructor() {
                this.x = Math.random() * canvas.width;
                this.y = Math.random() * canvas.height;
                this.size = Math.random() * 2 + 0.5;
                this.speedX = Math.random() * 0.5 - 0.25;
                this.speedY = Math.random() * 0.5 - 0.25;
                this.opacity = Math.random() * 0.5 + 0.2;
            }
            update() {
                this.x += this.speedX;
                this.y += this.speedY;
                if (this.x > canvas.width) this.x = 0;
                if (this.x < 0) this.x = canvas.width;
                if (this.y > canvas.height) this.y = 0;
                if (this.y < 0) this.y = canvas.height;
            }
            draw() {
                ctx.fillStyle = `rgba(249, 115, 22, ${this.opacity})`;
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
                ctx.fill();
            }
        }

        function createParticles() {
            particles = [];
            for (let i = 0; i < 100; i++) {
                particles.push(new Particle());
            }
        }

        function animate() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            particles.forEach(p => {
                p.update();
                p.draw();
            });
            requestAnimationFrame(animate);
        }

        window.addEventListener('resize', initCanvas);
        window.addEventListener('mousemove', (e) => {
            mouse.x = e.x;
            mouse.y = e.y;
        });

        initCanvas();
        createParticles();
        animate();

        // --- 2. Hero Stack Logic (Enhanced) ---
        const photos = [
            { url: 'https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=800&fit=crop', title: 'ALPS', loc: 'Switzerland' },
            { url: 'https://images.unsplash.com/photo-1501594907352-04cda38ebc29?w=800&fit=crop', title: 'FJORD', loc: 'Norway' },
            { url: 'https://images.unsplash.com/photo-1469474968028-56623f02e42e?w=800&fit=crop', title: 'PEAKS', loc: 'Italy' },
            { url: 'https://images.unsplash.com/photo-1519681393784-d120267933ba?w=800&fit=crop', title: 'REEF', loc: 'Maldives' },
            { url: 'https://images.unsplash.com/photo-1511593358241-7eea1f3c84e5?w=800&fit=crop', title: 'MIST', loc: 'Oregon' }
        ];

        const heroStack = document.getElementById('heroStack');
        photos.forEach((photo, i) => {
            const card = document.createElement('div');
            card.className = `hero-card`;
            card.innerHTML = `
                <img src="${photo.url}" style="width:100%; height:100%; object-fit:cover;" alt="${photo.title}">
                <div style="position:absolute; bottom:0; padding:2rem; background:linear-gradient(transparent, rgba(0,0,0,0.9)); width:100%;">
                    <h1 style="font-size:1.5rem; letter-spacing:2px;">${photo.title}</h1>
                </div>
            `;
            heroStack.appendChild(card);
        });

        function handleScroll() {
            const scrollY = window.scrollY;
            const cards = document.querySelectorAll('.hero-card');
            
            cards.forEach((card, i) => {
                const offset = i - 2;
                const rotate = (offset * 10) + (scrollY * 0.05 * offset);
                const tx = (offset * 130) - (scrollY * 0.2 * offset);
                const opacity = 1 - Math.abs(offset) * 0.3;
                
                card.style.transform = `translateX(${tx}px) rotate(${rotate}deg)`;
                card.style.opacity = opacity;
                card.style.zIndex = 10 - Math.abs(offset);
            });

            document.querySelectorAll('.reveal').forEach(el => {
                if (el.getBoundingClientRect().top < window.innerHeight * 0.85) {
                    el.classList.add('visible');
                }
            });
        }

        window.addEventListener('scroll', handleScroll);
        window.addEventListener('load', () => {
            lucide.createIcons();
            handleScroll();
        });
    </script>
</body>
