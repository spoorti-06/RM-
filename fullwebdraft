    <script>
        // Project Data
        const projectData = {
            "1": { title: "Cinematic Vision", imgs: ["https://picsum.photos/id/11/800/1000", "https://picsum.photos/id/12/800/1000", "https://picsum.photos/id/13/800/1000"] },
            "2": { title: "Urban Rhythms", imgs: ["https://picsum.photos/id/21/800/1000", "https://picsum.photos/id/22/800/1000", "https://picsum.photos/id/23/800/1000"] },
            "3": { title: "Abstract Depth", imgs: ["https://picsum.photos/id/31/800/1000", "https://picsum.photos/id/32/800/1000", "https://picsum.photos/id/33/800/1000"] },
            "4": { title: "Architecture Plus", imgs: ["https://picsum.photos/id/41/800/1000", "https://picsum.photos/id/42/800/1000", "https://picsum.photos/id/43/800/1000"] },
            "5": { title: "Nature Series", imgs: ["https://picsum.photos/id/51/800/1000", "https://picsum.photos/id/52/800/1000", "https://picsum.photos/id/53/800/1000"] }
        };

        // Canvas Particles
        const canvas = document.getElementById('bgCanvas');
        const ctx = canvas.getContext('2d');
        let particles = [];
        function initCanvas() {
            canvas.width = window.innerWidth; canvas.height = window.innerHeight;
            particles = [];
            for (let i = 0; i < 100; i++) particles.push(new Particle());
        }
        class Particle {
            constructor() {
                this.x = Math.random() * canvas.width;
                this.y = Math.random() * canvas.height;
                this.size = Math.random() * 1.5 + 0.5;
                this.speedX = Math.random() * 0.4 - 0.2;
                this.speedY = Math.random() * 0.4 - 0.2;
                this.opacity = Math.random() * 0.4 + 0.1;
            }
            update() {
                this.x += this.speedX; this.y += this.speedY;
                if (this.x > canvas.width) this.x = 0; if (this.x < 0) this.x = canvas.width;
                if (this.y > canvas.height) this.y = 0; if (this.y < 0) this.y = canvas.height;
            }
            draw() {
                ctx.fillStyle = `rgba(249, 115, 22, ${this.opacity})`;
                ctx.beginPath(); ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2); ctx.fill();
            }
        }
        function animate() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            particles.forEach(p => { p.update(); p.draw(); });
            requestAnimationFrame(animate);
        }
        initCanvas(); animate();

        // Hero Stack
        const heroPhotos = [
            { url: 'https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=800&fit=crop', title: 'ALPS' },
            { url: 'https://images.unsplash.com/photo-1501594907352-04cda38ebc29?w=800&fit=crop', title: 'FJORD' },
            { url: 'https://images.unsplash.com/photo-1469474968028-56623f02e42e?w=800&fit=crop', title: 'PEAKS' },
            { url: 'https://images.unsplash.com/photo-1519681393784-d120267933ba?w=800&fit=crop', title: 'REEF' },
            { url: 'https://images.unsplash.com/photo-1511593358241-7eea1f3c84e5?w=800&fit=crop', title: 'MIST' }
        ];
        const heroStack = document.getElementById('heroStack');
        heroPhotos.forEach((photo) => {
            const card = document.createElement('div');
            card.className = `hero-card`;
            card.innerHTML = `<img src="${photo.url}" style="width:100%; height:100%; object-fit:cover;"><div style="position:absolute; bottom:0; padding:2rem; background:linear-gradient(transparent, rgba(0,0,0,0.9)); width:100%;"><h1>${photo.title}</h1></div>`;
            heroStack.appendChild(card);
        });

        // Gallery Engine
        const galleryItems = document.querySelectorAll('.item');
        galleryItems.forEach(item => {
            item.addEventListener('click', () => {
                const currentPos = parseInt(item.getAttribute('data-pos'));
                if (currentPos === 3) openProject(item.getAttribute('data-id'));
                else updateGalleryPositions(3 - currentPos);
            });
        });

        function updateGalleryPositions(shift) {
            galleryItems.forEach(item => {
                let newPos = parseInt(item.getAttribute('data-pos')) + shift;
                while (newPos > 5) newPos -= 5;
                while (newPos < 1) newPos += 5;
                item.setAttribute('data-pos', newPos);
                item.className = `item pos-${newPos}`;
            });
        }

        function openProject(id) {
            const data = projectData[id];
            const modal = document.getElementById('galleryModal');
            document.getElementById('modalTitle').innerText = data.title;
            const grid = document.getElementById('modalGrid');
            grid.innerHTML = '';
            data.imgs.forEach((src, index) => {
                const div = document.createElement('div');
                div.style.opacity = "0"; div.style.transition = "0.6s ease " + (index * 0.1) + "s";
                div.innerHTML = `<img src="${src}" style="width:100%; height:450px; object-fit:cover; border-radius:12px;">`;
                grid.appendChild(div);
                setTimeout(() => div.style.opacity = "1", 50);
            });
            modal.style.display = 'block';
            setTimeout(() => modal.classList.add('active'), 10);
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            const modal = document.getElementById('galleryModal');
            modal.classList.remove('active');
            setTimeout(() => { modal.style.display = 'none'; document.body.style.overflow = 'auto'; }, 500);
        }

        // Contact Toggle
        function toggleContact(show) {
            const overlay = document.getElementById('contactOverlay');
            overlay.style.display = show ? 'flex' : 'none';
            document.body.style.overflow = show ? 'hidden' : 'auto';
        }

        // Aura Mouse Tracking
        const aura = document.getElementById('contactAura');
        document.addEventListener('mousemove', (e) => {
            if(window.getComputedStyle(document.getElementById('contactOverlay')).display === 'flex') {
                const x = (e.clientX / window.innerWidth - 0.5) * 15;
                const y = (e.clientY / window.innerHeight - 0.5) * 15;
                aura.style.transform = `translate(${x}px, ${y}px)`;
            }
        });

        // Scroll Reveal
        function handleScroll() {
            const scrollY = window.scrollY;
            document.querySelectorAll('.hero-card').forEach((card, i) => {
                const offset = i - 2;
                const rotate = (offset * 10) + (scrollY * 0.05 * offset);
                const tx = (offset * 130) - (scrollY * 0.2 * offset);
                card.style.transform = `translateX(${tx}px) rotate(${rotate}deg)`;
                card.style.opacity = 1 - Math.abs(offset) * 0.3;
            });
            document.querySelectorAll('.reveal, .timeline-card').forEach(el => {
                if (el.getBoundingClientRect().top < window.innerHeight * 0.85) el.classList.add('visible');
            });
        }

        window.addEventListener('scroll', handleScroll);
        window.addEventListener('resize', initCanvas);
        window.addEventListener('load', () => { lucide.createIcons(); handleScroll(); });
    </script>
</body>
</html>
